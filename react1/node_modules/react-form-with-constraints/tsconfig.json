{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noLib": false,
    "lib": ["dom.iterable", "es2017"],
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "tsc"
  },

  // List everything so that vscode displays the "problems" for everything

  "files": [
    "src/index.ts",
    "src/Enzyme.ts",
    "src/DisplayFields.tsx",
    "src/Bootstrap4.tsx"
  ],

  "include": [
    "src/*.test.ts",
    "src/*.test.tsx",
    "examples/**/*.tsx"
  ]
}
